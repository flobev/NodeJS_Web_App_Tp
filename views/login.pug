extends components/layout.pug

append head
    style 
        include styles/login.css

    title Connexion

block content
    - var registerUrl = './register'

    form.form-signin.text-center
        img(
            src="https://upload.wikimedia.org/wikipedia/commons/9/93/Google_Contacts_icon.svg"
            class="mb-4"
            width="72"
            height="72"
        )

        h1.h3.mb-3.fw-normal Connexion

        input(
            type="email"
            class="form-control"
            id="email"
            placeholder="Adresse mail"
            required
        )

        input(
            type="password"
            class="form-control"
            id="password"
            placeholder="Mot de passe"
            required
        )

        button(type="button" class="btn btn-lg btn-primary mt-3" 'onclick'='validLogin()') Me connecter

        div(class="alert alert-danger fade mt-3 mb-0" role="alert") Identifiant ou mot de passe incorrect

        div.mt-3
            a(href=registerUrl) Pas encore de compte ? Inscrivez-vous !

append scripts 
    script 
        include ./scripts/login.js